<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Screen -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.smartshop.app.ui.splash.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- Onboarding -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.smartshop.app.ui.onboarding.OnboardingFragment"
        android:label="Onboarding">
        <action
            android:id="@+id/action_onboarding_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- Login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.smartshop.app.ui.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment"/>
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_login_to_forgotPassword"
            app:destination="@id/forgotPasswordFragment"/>
    </fragment>

    <!-- Register -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.smartshop.app.ui.auth.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- Home -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.smartshop.app.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_productDetail"
            app:destination="@id/productDetailFragment"/>
        <action
            android:id="@+id/action_home_to_cart"
            app:destination="@id/cartFragment"/>
        <action
            android:id="@+id/action_home_to_orders"
            app:destination="@id/ordersFragment"/>
        <action
            android:id="@+id/action_home_to_shoppingLists"
            app:destination="@id/shoppingListsFragment"/>

    </fragment>

    <!-- Product Detail -->
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.smartshop.app.ui.product.ProductDetailFragment"
        android:label="Product Detail">
        <argument
            android:name="productId"
            app:argType="string"/>
        <action
            android:id="@+id/action_productDetail_to_priceCompare"
            app:destination="@id/priceCompareFragment"/>
    </fragment>

    <!-- Cart -->
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.smartshop.app.ui.cart.CartFragment"
        android:label="Cart">
        <action
            android:id="@+id/action_cart_to_checkout"
            app:destination="@id/checkoutFragment"/>
    </fragment>

    <!-- Checkout -->
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.smartshop.app.ui.checkout.CheckoutFragment"
        android:label="Checkout">
        <action
            android:id="@+id/action_checkout_to_orders"
            app:destination="@id/ordersFragment"
            app:popUpTo="@id/cartFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- Orders -->
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.smartshop.app.ui.orders.OrdersFragment"
        android:label="Orders"/>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.smartshop.app.ui.auth.ForgotPasswordFragment"
        android:label="Forgot Password"/>

    <!-- Shopping Lists -->
    <fragment
        android:id="@+id/shoppingListsFragment"
        android:name="com.smartshop.app.ui.shoppinglist.ShoppingListsFragment"
        android:label="ShoppingListsFragment"
        tools:layout="@layout/fragment_shopping_lists">
        <action
            android:id="@+id/action_shoppingLists_to_listDetail"
            app:destination="@id/listDetailFragment"/>
    </fragment>

    <!-- List Detail -->
    <fragment
        android:id="@+id/listDetailFragment"
        android:name="com.smartshop.app.ui.shoppinglist.ListDetailFragment"
        android:label="ListDetailFragment"
        tools:layout="@layout/fragment_list_detail">
        <argument
            android:name="listId"
            app:argType="string"/>
        <argument
            android:name="listName"
            app:argType="string"/>
        <action
            android:id="@+id/action_listDetail_to_productPicker"
            app:destination="@id/productPickerFragment"/>
    </fragment>

    <fragment
        android:id="@+id/productPickerFragment"
        android:name="com.smartshop.app.ui.shoppinglist.ProductPickerFragment"
        android:label="ProductPickerFragment"
        tools:layout="@layout/fragment_product_picker">
        <argument
            android:name="listId"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/priceCompareFragment"
        android:name="com.smartshop.app.ui.compare.PriceCompareFragment"
        android:label="PriceCompareFragment"
        tools:layout="@layout/fragment_price_compare">
        <argument
            android:name="productName"
            app:argType="string"/>
    </fragment>
</navigation>