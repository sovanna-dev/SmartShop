<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F5">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/trackerContainer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/trackerButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:icon="@android:drawable/ic_menu_recent_history"
                app:iconTint="#E8420A"/>

        </FrameLayout>
        <!-- Back button -->
        <FrameLayout
            android:id="@+id/backContainer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:icon="@android:drawable/ic_media_previous"
                app:iconTint="#1A0A00"/>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Orders"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1A0A00"
            android:fontFamily="serif"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Filter tabs -->
    <HorizontalScrollView
        android:id="@+id/filterTabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="All"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/bg_tab_active"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tabActive"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Active"
                android:textSize="13sp"
                android:textColor="#6B3A2A"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/bg_tab_inactive"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tabCompleted"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Completed"
                android:textSize="13sp"
                android:textColor="#6B3A2A"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/bg_tab_inactive"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tabCancelled"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Cancelled"
                android:textSize="13sp"
                android:textColor="#6B3A2A"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/bg_tab_inactive"/>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Orders list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ordersRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/filterTabs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Loading -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:indicatorColor="#E8420A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/emptyContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¦"
            android:textSize="56sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No orders yet"
            android:textSize="18sp"
            android:textColor="#B07060"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place your first order to see it here"
            android:textSize="14sp"
            android:textColor="#B07060"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>