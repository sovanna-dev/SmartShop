<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash">

    <!-- Decorative circle top right -->
    <View
        android:id="@+id/circleTopRight"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:alpha="0.05"
        android:background="@drawable/shape_circle_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="-60dp"/>

    <!-- Decorative circle bottom left -->
    <View
        android:id="@+id/circleBottomLeft"
        android:layout_width="440dp"
        android:layout_height="440dp"
        android:alpha="0.05"
        android:background="@drawable/shape_circle_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-80dp"
        android:layout_marginStart="-80dp"/>

    <!-- Center glow circle outer -->
    <View
        android:id="@+id/circleGlowOuter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0.08"
        android:background="@drawable/shape_circle_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.42"/>

    <!-- Logo background circle outer -->
    <View
        android:id="@+id/logoCircleOuter"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:alpha="0.15"
        android:background="@drawable/shape_circle_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.42"/>

    <!-- Logo background circle inner -->
    <View
        android:id="@+id/logoCircleInner"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:alpha="0.2"
        android:background="@drawable/shape_circle_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.42"/>

    <!-- Shopping bag icon -->
    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_shopping_bag"
        android:scaleX="0"
        android:scaleY="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.42"/>

    <!-- App name -->
    <TextView
        android:id="@+id/splashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SmartShop"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:alpha="0"
        android:letterSpacing="-0.03"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/logoCircleOuter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tagline -->
    <TextView
        android:id="@+id/splashTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOP SMARTER"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:alpha="0"
        android:letterSpacing="0.2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/splashTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Loading dots -->
    <LinearLayout
        android:id="@+id/dotsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:alpha="0"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/dot1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_circle_white"
            android:alpha="0.9"/>

        <View
            android:id="@+id/dot2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_circle_white"
            android:alpha="0.5"/>

        <View
            android:id="@+id/dot3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/shape_circle_white"
            android:alpha="0.3"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>