<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F5">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Hero image area -->
            <FrameLayout
                android:id="@+id/heroArea"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:background="@drawable/bg_product_hero"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Product image -->
                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"/>

            </FrameLayout>

            <!-- Back button -->
            <FrameLayout
                android:id="@+id/backButtonContainer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_back_button"
                android:elevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backButton"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    app:icon="@android:drawable/ic_media_previous"
                    app:iconTint="#1A0A00"/>

            </FrameLayout>

            <!-- Wishlist button -->
            <FrameLayout
                android:id="@+id/wishlistContainer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_back_button"
                android:elevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_add"
                    android:tint="#E8420A"/>

            </FrameLayout>

            <!-- Content sheet -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentSheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_content_sheet"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="120dp"
                android:layout_marginTop="-24dp"
                app:layout_constraintTop_toBottomOf="@id/heroArea"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Category badge -->
                <TextView
                    android:id="@+id/productCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_category_chip"
                    android:textColor="#E8420A"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- Product name -->
                <TextView
                    android:id="@+id/productName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1A0A00"
                    android:fontFamily="serif"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/productCategory"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Price -->
                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#E8420A"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/productName"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- Stock status -->
                <TextView
                    android:id="@+id/stockStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/productName"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Rating -->
                <LinearLayout
                    android:id="@+id/ratingContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/productPrice"
                    app:layout_constraintStart_toStartOf="parent">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:progressTint="#FFD166"/>

                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:textColor="#6B3A2A"/>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#F0D5CC"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/ratingContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Description title -->
                <TextView
                    android:id="@+id/descriptionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#1A0A00"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- Description -->
                <TextView
                    android:id="@+id/productDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="#6B3A2A"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/descriptionTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Add to Cart button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addToCartButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="Add to Cart"
        android:textSize="17sp"
        android:textStyle="bold"
        android:backgroundTint="#E8420A"
        app:cornerRadius="16dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>